{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "esModuleInterop": true,
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }